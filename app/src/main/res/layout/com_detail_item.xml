<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/detail_state_item">
    <TextView
        android:id="@+id/com_di_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_marginLeft="50px"
        android:paddingBottom="15px"
        android:text="标题"
        android:textStyle="bold"
        android:textSize="52px"
        android:textColor="@color/color_3b3b3b"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/com_di_iv_image"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="8"
            android:src="@drawable/vector_run_state" />
        <TextView
            android:id="@+id/com_di_dv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:text="值"
            android:textSize="@dimen/detail_item_font_size"
            android:textColor="@color/color_3b3b3b"/>
        <ImageView
            android:id="@+id/com_di_iv_setup"
            android:layout_width="64px"
            android:layout_height="64px"
            android:paddingRight="10px"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@drawable/vector_edit" />

    </LinearLayout>

</LinearLayout>
