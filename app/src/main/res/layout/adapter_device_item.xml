<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/sd_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/unit_weather_icon"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="80px"
                android:layout_marginTop="3px"
                android:tint="#FFFF00"
                android:src="@drawable/vector_drawable_999_fill" />
            <TextView
                android:id="@+id/unit_weather_temper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3px"
                android:text="-12℃"
                android:textSize="40px"
                android:textColor="@color/color_3b3b3b"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="9">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/unit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNIT NAME"
                    android:textSize="45px"
                    android:textStyle="bold"
                    android:textColor="@color/color_3b3b3b"
                    android:layout_marginLeft="20px"/>
                <TextView
                    android:id="@+id/unit_weather_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10px"
                    android:text="11℃/-2℃(西南风 3-4级)"
                    android:textSize="44px"
                    android:textColor="@color/font_dark_gray"
                    android:layout_marginLeft="20px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/unit_statusDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="statusDesc"
                    android:textSize="45px"
                    android:textColor="@color/font_dark_gray"
                    android:layout_marginLeft="20px"/>
                <TextView
                    android:id="@+id/unit_macLastTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:text="2021-12-18 13:53:42"
                    android:textSize="45px"
                    android:textColor="@color/font_dark_gray"
                    android:layout_marginLeft="20px"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:paddingRight="10px"
            android:gravity="right|center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30px"
                android:layout_height="50px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ico_right_arrow_01"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorLightGray" />
</LinearLayout>
