<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/rl_menu">

    <LinearLayout
        android:id="@+id/ll_img_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="90px"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tab"
                android:layout_width="@dimen/main_menu_image_width"
                android:layout_height="@dimen/main_menu_image_heigth"
                android:layout_marginTop="10px"
                android:layout_marginStart="10px"
                android:src="@drawable/main_home_selected" />

            <LinearLayout
                android:id="@+id/ll_message_num"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:layout_gravity="top|right"
                android:visibility="gone">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_govern_work_num"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:layout_gravity="top|right"
                android:visibility="gone">

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/txt_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginEnd="30px"
            android:layout_below="@+id/img_tab"
            android:text="首页"
            android:textSize="@dimen/main_bottom_text_size"
            android:textColor="@drawable/main_menu_txt_selector"/>

    </LinearLayout>



</RelativeLayout >

